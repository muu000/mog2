<Page
    x:Class="mogtata.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mogtata"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" SizeChanged="Page_SizeChanged">

    <Grid x:Name="full" Background="#FF500000">
        <Button x:Name="button1" Content="ゲームスタート" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,300,0,0" FontSize="36" Tapped="button1_Tapped" />
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" Margin="0,0,0,410" TextWrapping="Wrap" Text="もぐらたたき" VerticalAlignment="Center" FontSize="100" TextAlignment="Center"/>

        <!--  point a   -->
        <Image x:Name="mog1" Grid.Column="2" HorizontalAlignment="Center" Margin="0,0,0,150" VerticalAlignment="Center" Source="Assets/mog_a_300x300.png" Width="300" Height="300" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <CompositeTransform/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Page>
